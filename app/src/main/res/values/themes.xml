<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ThemePlayground" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="primaryButtonTheme">@style/Widget.Button.Primary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ThemePlayground.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.BLACK" parent="Theme.ThemePlayground">
        <!-- Customize your theme here. -->
        <item name="primaryColor">@color/colorBlack</item>
        <item name="primaryDarkColor">@color/colorBlackDark</item>
        <item name="primaryAccentColor">@color/colorBlackAccent</item>
    </style>

    <style name="AppTheme.GREEN" parent="Theme.ThemePlayground">
        <!-- Customize your theme here. -->
        <item name="primaryColor">@color/colorGreen</item>
        <item name="primaryDarkColor">@color/colorGreenDark</item>
        <item name="primaryAccentColor">@color/colorGreenAccent</item>
    </style>

    <style name="Widget.Button.Primary" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">?attr/primaryColor</item>
        <item name="colorControlHighlight">?attr/primaryDarkColor</item>
        <item name="android:textColor">?attr/primaryAccentColor</item>
    </style>

    <style name="Theme.ThemePlayground.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ThemePlayground.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>